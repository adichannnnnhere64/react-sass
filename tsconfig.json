{
  "include": ["resources/js/**/*"],
  "exclude": ["node_modules", "public/build"],
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "noEmit": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "rootDir": "./resources/js",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@/*": ["./resources/js/*"],
      "react": ["./node_modules/@types/react"]
    },
    "types": ["vite/client"]
  }
}
